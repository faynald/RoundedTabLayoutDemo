<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Layer for the stroke -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="25dp" />
            <solid android:color="@android:color/transparent" /> <!-- Transparent color for the stroke layer -->
            <stroke
                android:width="4dp"
                android:color="@color/secondary_50" />
        </shape>
    </item>

    <!-- Layer for the shape (solid) -->
    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="25dp" />
            <solid android:color="@color/secondary_50" />
        </shape>
    </item>
</layer-list>